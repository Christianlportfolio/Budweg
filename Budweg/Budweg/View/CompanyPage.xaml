<Page x:Class="Budweg.View.CompanyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Budweg.View"
      mc:Ignorable="d" 
      d:DesignHeight="718" d:DesignWidth="1250"
      Title="CustomerPage">

    <Grid Background="LightGray">
        <Grid x:Name="pageHeader" VerticalAlignment="Top" Height="30" Background="SlateGray">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="150" />

            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>


            </Grid.RowDefinitions>
            <Button x:Name="btnCustomer" Content="Opret kunde" Click="btnCustomer_Click"></Button>
            <Button Content="Opdater kunde" Grid.Column="1"></Button>
            <Button Content="Slet Kunde" Grid.Column="2"></Button>
         
            
            
        </Grid>
      


    </Grid>



</Page>
